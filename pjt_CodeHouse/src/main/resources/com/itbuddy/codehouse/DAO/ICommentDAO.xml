<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itbuddy.codehouse.DAO.ICommentrDAO">

	<select id="select" resultType="com.itbuddy.codehouse.DTO.Comment" parameterType="com.itbuddy.codehouse.DTO.Comment">
		SELECT *
        FROM comment
        <trim prefix="WHERE"  prefixOverrides="AND|OR">
            <if test="mem_id != null">AND mem_id=#{mem_id}</if> 
            <if test="mem_nickname != null">AND mem_nickname=#{mem_nickname}</if>
            <if test="mem_pw != null">AND mem_pw=#{mem_pw}</if> 
            <if test="mem_email != null">AND mem_email=#{mem_email}</if>
        </trim>
		
    </select>
    
    <update id="update" parameterType="com.itbuddy.codehouse.DTO.Comment">
        UPDATE comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="mem_nickname != null">mem_nickname=#{mem_nickname},</if> 
            <if test="mem_pw != null">mem_pw=#{mem_pw},</if> 
            <if test="mem_email != null">mem_email=#{mem_email},</if>
            <if test="mem_img != null">mem_img=#{mem_img},</if>
         </trim>            
         WHERE mem_id=#{mem_id}
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.itbuddy.codehouse.DTO.Comment">
        INSERT INTO comment(#{mem_id},#{mem_nickname},#{mem_pw},#{mem_email},#{mem_img})
		values(#{mem_id},#{mem_nickname},#{mem_pw},#{mem_email},#{mem_img})
    </insert>
	
</mapper>
